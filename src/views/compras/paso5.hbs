 <body class="bg-light">

   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h2>Realizar pedido</h2>
  </div>


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
   
     <div class="ml-1"><h5>Productor: {{productor.nombre_productor}}</h5></div>
    
     <h5 class="mr-3">Proveedor: {{ proveedor.nombre_proveedor}} </h5>

  </div>

<h5>Metodo de envio </h5>


     <form action="/compras/6" method="POST" >
       <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de envio</th>
              <th>Costo</th>
            </tr>
          </thead>
             {{#each envios }}
          <tbody>     
            <tr>
              
              <td>{{ tipo_envio }}</td>
              <td>{{ costo_envio}}</td> 
              <td><input class="mr-1" type="checkbox" id="metodo" name="metodo" value="{{ id_metodo_envio }}"> </td>  
            </tr>
          </tbody>
          {{/each}}
        </table>
      </div>

      <input id="productor" name="productor" type="hidden" value={{ productor.id_productor }}>

      <input id="proveedor" name="proveedor" type="hidden" value={{ proveedor.id_proveedor }}>

      <input id="IdPedido" name="IdPedido" type="hidden" value={{ idPedido }}>

       <input id="IdContrato" name="IdContrato" type="hidden" value={{ idContrato }}>

        <input id="monto" name="monto" type="hidden" value={{ valor }}>

   <button class="btn btn-primary  btn-block" type="submit"> Siguiente </button>
      </form>

    
   </main>
 </body>