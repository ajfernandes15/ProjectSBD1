 
 <body class="bg-light">

   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h2>Realizar Pedido</h2>
  </div>

 
    
    <div class="col-md-8 order-md-1">
<h4> Seleccionar proveedor </h2>
      
        <div class="row">
          <div class="col-md-5 mb-3">
            <label for="state">Proveedores con contrato vigente</label>
           <form action="/compras/3" method="POST" >
            <select class="custom-select d-block w-100" id="proveedor" name="proveedor" required>
              <option value="">Elegir</option>
              {{#each proveedor}}
              <option> {{nombre_proveedor}} </option>
              {{/each}}
            </select>
            <div class="invalid-feedback">
              Selecciona un proveedor! 
            </div>
         </div>
           <input id="productor" name="productor" type="hidden" value={{productor.id_productor}}>
           <hr class="my-3">
        <button class="btn btn-primary  btn-block" type="submit">Siguiente</button> 
        </form>
        </div>
        </div>
 
  </main>


</div>

