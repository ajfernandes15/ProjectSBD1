 <script>

     function cancelado(){

         alert("Pedido CANCELADO");

     }

      function confirmado(){

         alert("Pedido Confirmado");

     }


 </script>

 <body class="bg-light">

   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h2>Confimarcion de Pedido</h2>
  </div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
   
     <div class="ml-1"><h5>Productor: {{productor.nombre_productor}}</h5></div>
    
     <h5 class="mr-3">Proveedor: {{ proveedor.nombre_proveedor}} </h5>

  </div>

  
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 bg-light">
   
     <div class="ml-1"><h6>Estatus de pedido: {{ confirmacion.estatus}}</h6></div>

      <div class="ml-1"><h6>Fecha de emision: {{ confirmacion.fecha_emision }}</h6></div>

      <div class="ml-1"><h6>Monto en dolares $: {{ confirmacion.pago_total_dolar}} </h6></div>

  </div>



<h5>Producto contratado</h5>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>               
              <th>Nombre </th>
              <th>Precio</th>
              <th>Cantidad(vol)</th>
              <th>Cantidad contratada</th>
            </tr>
          </thead>
          <tbody>     
            <tr>
              <td>{{ confirmacion.nombre_materia }}</td>
              <td>{{ confirmacion.precio }}</td>
              <td>{{ confirmacion.cantidad_vol }} ml</td> 
              <td>{{ confirmacion.cantidad }} </td>          
            </tr>                
          </tbody>
        </table>
      </div>
    
    <h5 class="mt-3">Metodo de envio </h5>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de envio</th>
              <th>Costo</th>
            </tr>
          </thead>
          <tbody>     
            <tr>
              
              <td>{{ envios.tipo_envio }}</td>
              <td>{{ envios.costo_envio}}</td>
            
            </tr>
                 
          </tbody>
     
        </table>
      </div>


<h5 class="mt-3">Condicion de pago </h5>
  
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de pago</th>
            </tr>
          </thead>
          <tbody>
              
            <tr>
              
              <td>{{ pagos.tipo_pago }}</td>
            </tr>
                 
          </tbody>
        </table>
      </div>


    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

<form action="/compras/8" method="POST" onclick="confirmado();">

<input id="idPedido" name="idPedido" type="hidden" value={{idPedido}}>

<button class="btn btn-success  " type="submit">Confirmar</button>
</form>

<form action="/compras/9" method="POST" onclick="cancelado();" >

<input id="idPedido" name="idPedido" type="hidden" value={{idPedido}}>

<button class="btn btn-danger  " type="submit"> Rechazar </button>

</form>
  </div>
     
   

 



   </main>
 </body>
