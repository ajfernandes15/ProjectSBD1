 
 <body class="bg-light">

   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h2>Realizar Pedido</h2>
  </div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
   
     <div class="ml-1"><h5>Productor: {{productor.nombre_productor}}</h5></div>
    
     <h5 class="mr-3">Provedor: {{ proveedor.nombre_proveedor}} </h5>

  </div>
   



<h5>Productos contratados</h5>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>               
              <th>Numero IPC </th>
              <th>Nombre </th>
              <th>Precio</th>
              <th>Cantidad(vol)</th>
            </tr>
          </thead>
             {{#each producto }}
          <tbody>     
            <tr>
              <td>{{ numero_ipc }}</td>
              <td>{{ nombre_materia }}</td>
              <td>{{ precio }}</td>
              <td>{{ cantidad_vol }} ml</td>
              <td><input class="mr-1" type="checkbox" id="productos" name="productos" value="{{ numero_ipc }}"></td>           
            </tr>                
          </tbody>
          {{/each}}
        </table>
      </div>
      <input id="productor" name="productor" type="hidden" value={{ productor.id_productor }}>

{{#each proveedor}}
       <input id="proveedor" name="proveedor" type="hidden" value={{ id_proveedor }}>
{{/each }}
 


    
    <h5 class="mt-3">Metodos de envio </h5>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de envio</th>
              <th>Costo</th>
            </tr>
          </thead>
             {{#each envios }}
          <tbody>     
            <tr>
              
              <td>{{ tipo_envio }}</td>
              <td>{{ costo_envio}}</td>
              <td><input class="mr-1" type="checkbox" id="envio" name="envio" value="{{id_metodo_envio}}"></td>
            </tr>
                 
          </tbody>
          {{/each}}
        </table>
      </div>


<h5 class="mt-3">Condicion de pago </h5>
  
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de pago</th>
            </tr>
          </thead>
             {{#each pagos }}
          <tbody>
              
            <tr>
              
              <td>{{ tipo_pago }}</td>
              <td><input class="mr-1" type="checkbox" id="pago" name="pago" value="{{id_condicion_pago}}"></td>
            
            </tr>
                 
          </tbody>
          {{/each}}
        </table>
      </div>

<form action="/compras/4" method="POST" >

<input id="productor" name="productor" type="hidden" value={{productor.id_productor}}>
<input id="proveedor" name="proveedor" type="hidden" value={{proveedor.id_proveedor}}>
<button class="btn btn-primary  btn-block" type="submit">Siguiente</button>
</form>
     
   

 



   </main>
 </body>
