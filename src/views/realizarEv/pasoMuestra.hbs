<body class="bg-light">

   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h2>Realizar Evaluacion (inicial) </h2>
  </div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
   
     <h5 class="mr-3">Proveedor: {{ proveedor.nombre_proveedor}} </h5>

  </div>

<h5>Productos </h5>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>               
              <th>Numero IPC </th>
              <th>Nombre de producto</th>
              <th>Descripcion </th>
         <th>Parte procesada </th>
              <th>Duracion</th>
              <th>Solubilidad</th>
            </tr>
          </thead>
             {{#each producto }}
          <tbody>     
            <tr>
              
              <td>{{ numero_ipc }}</td>
              <td>{{ nombre_materia }}</td>
              <td>{{ descripcion_materia }}</td>
          <td>{{ parte_procesada }}</td>
              <td>{{ duracion }}</td>
              <td>{{ solubilidad }}</td>
            
            
            </tr>
                 
          </tbody>
          {{/each}}
        </table>
      </div>
    
    <h5 class="mt-3">Metodos de envio </h5>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de envio</th>
              <th>Costo</th>
            </tr>
          </thead>
             {{#each envios }}
          <tbody>     
            <tr>
              
              <td>{{ tipo_envio }}</td>
              <td>{{ costo_envio}}</td>
            
            </tr>
                 
          </tbody>
          {{/each}}
        </table>
      </div>


<h5 class="mt-3">Condicion de pago </h5>
  
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de pago</th>
            </tr>
          </thead>
             {{#each pagos }}
          <tbody>
              
            <tr>             
              <td>{{ tipo_pago }}</td>
            </tr>

          </tbody>
          {{/each}}
        </table>
      </div>

<form action="/realizarEv/valoracionC" method="POST" >

<input id="productor" name="productor" type="hidden" value={{productor.id_productor}}>
<input id="proveedor" name="proveedor" type="hidden" value={{proveedor.id_proveedor}}>

<button class="btn btn-primary  btn-block" type="submit">Siguiente</button>
</form>
     
   

 



   </main>
 </body>
