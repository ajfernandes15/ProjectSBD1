 
 <body class="bg-light">

   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h2>Realizar Evaluacion</h2>
  </div>


<h5>Condicion de pago </h5>
 {{#each proveedor}}
 <h5 class="my-3 mx-auto"> Proveedor : {{nombre_proveedor }} </h5>
 {{/each}}
     <form action="/realizarEv/4" method="POST" >
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tipo de pago</th>
              <th>% de cuota </th>
              <th>Meses de cuota</th>
              <th>Cantidad de cuotas</th>
            </tr>
          </thead>
             {{#each pagos }}
          <tbody>
              
            <tr>
              
              <td>{{ tipo_pago }}</td>
              <td>{{ porcentuaje_cuota }}</td>
              <td>{{ meses_cuota }}</td>
              <td>{{ cantidad_cuotas }}</td>
              <td><input class="mr-1" type="checkbox" id="pago" name="pago" value="{{id_condicion_pago}}"></td>
            
            </tr>
                 
          </tbody>
          {{/each}}
        </table>
      </div>
    {{#each productor}}
      <input id="productor" name="productor" type="hidden" value={{ id_productor }}>
    {{/each }}

      {{#each proveedor}}
       <input id="proveedor" name="proveedor" type="hidden" value={{ id_proveedor }}>
    {{/each }}


<button class="btn btn-primary  btn-block" type="submit">Siguiente</button>
      </form>

    


  



   </main>
 </body>
